@model DataTable
@using System.Data

<main id="main" class="main">
    <span class="text-danger">@TempData["ErrorMessage"]</span>
    <div class="container mt-4">
        <!-- Title and Add Button -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold text-primary">User Details</h4>
            <a class="btn btn-primary btn-sm px-4 py-2" asp-area="" asp-controller="User" asp-action="UserAdd">+Add User</a>
        </div>

        <!-- Table -->
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>UserID</th>
                        <th>UserName</th>
                        <th>MobileNo</th>
                        <th>EmailID</th>
                        <th>CreationDate</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td>@row["UserID"]</td>
                            <td>@row["UserName"]</td>
                            <td>@row["MobileNo"]</td>
                            <td>@row["EmailID"]</td>
                            <td>@row["CreationDate"]</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary me-1">Edit</button>
                                <a asp-controller="User" asp-action="UserDelete" asp-route-UserID="@row["UserID"]" class="btn btn-outline-danger btn-xs">
                                    <i class="bi bi-x"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>
    </div>
</main>
