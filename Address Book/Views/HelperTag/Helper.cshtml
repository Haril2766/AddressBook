<h2>Create Helper</h2>

@model Address_Book.Models.HelperTagModel

<main id="main" class="main">
    <div class="container">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Create", "Helper", FormMethod.Post))
                {
                    <div class="col-12">
                        <div class="form-group">
                            @Html.Label("Name", "Name")
                            @Html.TextBox("Name", null, new { @class = "form-control", placeholder = "Enter Name" })
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            @Html.Label("Email", "Email")
                            @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "Enter Email" })
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group">
                            @Html.Label("Password", "Password")
                            @Html.Password("Password", null, new { @class = "form-control", placeholder = "Enter Password" })
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            @Html.Label("PhoneNumber", "Phone Number")
                            @Html.TextBox("PhoneNumber", null, new { @class = "form-control", placeholder = "Enter Phone Number" })
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-secondary">Cancel</a>

                }
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}