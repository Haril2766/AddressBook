@model DataTable
@using System.Data


﻿<main id="main" class="main">
    <span class="text-danger">@TempData["ErrorMessage"]</span>
    <div class="container mt-4">
        <!-- Title and Add Button -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold text-primary">Country Details</h4>
            <a class="btn btn-primary btn-sm px-4 py-2" asp-area="" asp-controller="Country" asp-action="CountryAdd">+ Add Country</a>
        </div>
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>CountryID</th>
                        <th>CountryName</th>
                        <th>CountryCode</th>
                        <th>CreationDate</th>
                        <th>UserID</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td>@row["CountryID"]</td>
                            <td>@row["CountryName"]</td>
                            <td>@row["CountryCode"]</td>
                            <td>@row["CountryCode"]</td>
                            <td>@row["UserID"]</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary me-1">Edit</button>
                                <a asp-controller="Country" asp-action="CountryDelete" asp-route-CountryID="@row["CountryID"]" class="btn btn-outline-danger btn-xs">
                                    <i class="bi bi-x"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>

</main>