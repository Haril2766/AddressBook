@model AddressBook._2.Models.StateModel

<main id="main" class="main">
    <div class="container">
        <div class="pagetitle">
            <h1>State Add</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="DashboardView">Home</a></li>
                    <li class="breadcrumb-item">State</li>
                    <li class="breadcrumb-item active"><a asp-controller="Country" asp-action="CountryAdd">StateList</a></li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add New State</h5>
                <form class="row g-3" asp-controller="State" asp-action="StateSave" method="post">
                    <input hidden asp-for="StateId" />
                    <div class="col-12">
                        <label for="inputName4" asp-for="StateName" class="form-label"><span class="text-danger">*</span>State Name</label>
                        <input type="text" asp-for="StateName" class="form-control" id="inputName4" placeholder="Enter State Name">
                        <span asp-validation-for="StateName" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label for="inputQuestions4" asp-for="StateCode" class="form-label"><span class="text-danger">*</span>StateCode</label>
                        <input type="number" asp-for="StateCode" class="form-control" id="inputQuestions4" placeholder="Enter StateCode">
                        <span asp-validation-for="StateCode" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label for="inputQuestions4" asp-for="CountryId" class="form-label"><span class="text-danger">*</span>CountryId</label>
                        <input type="number" asp-for="CountryId" class="form-control" id="inputQuestions4" placeholder="Enter CountryId">
                        <span asp-validation-for="CountryId" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label for="inputQuestions4" asp-for="UserId" class="form-label"><span class="text-danger">*</span>UserId</label>
                        <input type="number" asp-for="UserId" class="form-control" id="inputQuestions4" placeholder="Enter UserId">
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>


